<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>

<div>
  <%= link_to 'Create a new post', articles_new_path(@article) %>
</div>

<br>
<br>

<% @articles.each do |article| %>
  <div>
    <h2><%= article.title %></h2>
    <p><%= article.content %></p>
    <p><%= link_to 'Read post', article_path(article) %></p>
  </div>
<% end %>
